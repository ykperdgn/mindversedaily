---
import BaseHead from '../../../components/BaseHead.astro';
import HeaderEN from '../../../components/HeaderEN.astro';
import FooterEN from '../../../components/FooterEN.astro';
import AstrologyWidgetEN from '../../../components/AstrologyWidgetEN.astro';

// Zodiac signs
const zodiacSigns = {
  'aries': { name: 'Aries', emoji: '‚ôà', element: 'Fire' },
  'taurus': { name: 'Taurus', emoji: '‚ôâ', element: 'Earth' },
  'gemini': { name: 'Gemini', emoji: '‚ôä', element: 'Air' },
  'cancer': { name: 'Cancer', emoji: '‚ôã', element: 'Water' },
  'leo': { name: 'Leo', emoji: '‚ôå', element: 'Fire' },
  'virgo': { name: 'Virgo', emoji: '‚ôç', element: 'Earth' },
  'libra': { name: 'Libra', emoji: '‚ôé', element: 'Air' },
  'scorpio': { name: 'Scorpio', emoji: '‚ôè', element: 'Water' },
  'sagittarius': { name: 'Sagittarius', emoji: '‚ôê', element: 'Fire' },
  'capricorn': { name: 'Capricorn', emoji: '‚ôë', element: 'Earth' },
  'aquarius': { name: 'Aquarius', emoji: '‚ôí', element: 'Air' },
  'pisces': { name: 'Pisces', emoji: '‚ôì', element: 'Water' }
};

const pageTitle = 'Horoscope - Zodiac Readings and Astrology';
const pageDescription = 'Daily, weekly and monthly horoscope readings. Astrology analysis, love compatibility and your personal horoscope guide.';
---

<!doctype html>
<html lang="en">
<head>
  <BaseHead
    title={pageTitle}
    description={pageDescription}
    keywords="horoscope, zodiac, astrology, daily horoscope, weekly horoscope, monthly horoscope, love compatibility, birth chart"
    articleType="website"
  />
  <style>
    body {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 25%, #0f3460 50%, #533483 75%, #8e44ad 100%);
      min-height: 100vh;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .content-wrapper {
      background: rgba(255, 255, 255, 0.95);
      min-height: 100vh;
      backdrop-filter: blur(10px);
    }

    .horoscope-main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .horoscope-hero {
      text-align: center;
      margin-bottom: 3rem;
      padding: 3rem 2rem;
      background: linear-gradient(135deg, #2d1b69 0%, #11998e 50%, #38ef7d 100%);
      border-radius: 2rem;
      color: white;
      position: relative;
      overflow: hidden;
    }

    .horoscope-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background:
        radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3) 0%, transparent 50%);
      pointer-events: none;
    }

    .hero-content {
      position: relative;
      z-index: 2;
    }

    .hero-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
      animation: float 3s ease-in-out infinite;
    }

    .hero-title {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 1rem;
      text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
      font-size: 1.2rem;
      opacity: 0.9;
      margin-bottom: 2rem;
    }

    .zodiac-overview {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 3rem;
    }

    .zodiac-card {
      background: white;
      border-radius: 1rem;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      text-align: center;
      transition: all 0.3s ease;
      border: 2px solid transparent;
      cursor: pointer;
    }

    .zodiac-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
      border-color: #8e44ad;
    }

    .zodiac-emoji {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .zodiac-name {
      font-size: 1.3rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: #2d1b69;
    }

    .zodiac-element {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .zodiac-action {
      display: inline-block;
      background: linear-gradient(45deg, #8e44ad, #3498db);
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 0.5rem;
      text-decoration: none;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
    }

    .zodiac-action:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .widget-intro {
      text-align: center;
      margin: 3rem 0;
      padding: 2rem;
      background: rgba(255,255,255,0.9);
      border-radius: 2rem;
      box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    }

    .widget-intro h2 {
      color: #2d1b69;
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .widget-intro p {
      color: #666;
      font-size: 1.1rem;
      line-height: 1.6;
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 800;
      text-align: center;
      margin-bottom: 2rem;
      color: #2d1b69;
      position: relative;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 4px;
      background: linear-gradient(45deg, #8e44ad, #3498db);
      border-radius: 2px;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    @media (max-width: 768px) {
      .horoscope-main {
        padding: 1rem;
      }

      .hero-title {
        font-size: 2rem;
      }

      .zodiac-overview {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="content-wrapper">
    <HeaderEN />

    <main class="horoscope-main">
      <!-- Hero Section -->
      <section class="horoscope-hero">
        <div class="hero-content">
          <div class="hero-icon">üîÆ‚ú®</div>
          <h1 class="hero-title">Astrology & Horoscope</h1>
          <p class="hero-subtitle">
            Discover your future with the guidance of the stars. Your daily, weekly and monthly horoscope readings are here.
          </p>
        </div>
      </section>

      <!-- Astrology Widget Introduction -->
      <section class="widget-intro">
        <h2 class="section-title">üîÆ Interactive Astrology Center</h2>
        <p>
          Discover your daily, weekly and monthly horoscope readings. Learn your love compatibility and see what the stars have to tell you.
        </p>
      </section>

      <!-- English Astrology Widget -->
      <AstrologyWidgetEN />

      <!-- Zodiac Signs Quick Access -->
      <section>
        <h2 class="section-title">Zodiac Selection</h2>
        <p style="text-align: center; color: #666; margin-bottom: 2rem;">
          Click on zodiac cards to directly access detailed readings for that sign.
        </p>

        <div class="zodiac-overview">
          {Object.entries(zodiacSigns).map(([key, sign]) => (
            <div class="zodiac-card" data-sign={key}>
              <div class="zodiac-emoji">{sign.emoji}</div>
              <div class="zodiac-name">{sign.name}</div>
              <div class="zodiac-element">{sign.element} Element</div>
              <div class="zodiac-action">View Readings</div>
            </div>
          ))}
        </div>
      </section>
    </main>

    <FooterEN />
  </div>

  <!-- English Horoscope page JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add click events to zodiac cards
      const zodiacCards = document.querySelectorAll('.zodiac-card[data-sign]');

      zodiacCards.forEach(card => {
        card.addEventListener('click', function() {
          const signKey = this.dataset.sign;
          const signName = this.querySelector('.zodiac-name').textContent;

          // Scroll to astrology widget
          scrollToAstrologyWidget();

          // Select sign and open widget
          setTimeout(() => {
            selectZodiacInWidget(signKey, signName);
          }, 800);
        });
      });

      function scrollToAstrologyWidget() {
        const astrologyWidget = document.querySelector('.astrology-widget');
        if (astrologyWidget) {
          astrologyWidget.scrollIntoView({
            behavior: 'smooth',
            block: 'center'
          });
        }
      }

      function selectZodiacInWidget(signKey, signName) {
        // Find and click zodiac button in widget
        const zodiacButton = document.querySelector(`.astrology-widget [data-sign="${signKey}"]`);

        if (zodiacButton) {
          // Clear previous selections
          document.querySelectorAll('.astrology-widget .zodiac-sign').forEach(btn => {
            btn.classList.remove('selected');
          });

          // Select new sign
          zodiacButton.classList.add('selected');
          zodiacButton.click();

          // Visual feedback
          zodiacButton.style.transform = 'scale(1.1)';
          setTimeout(() => {
            zodiacButton.style.transform = '';
          }, 200);
        }
      }
    });
  </script>
</body>
</html>
