---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import EbookCard from '../../components/EbookCard.astro';
const ebooks = (await getCollection('ebooks')).sort((a,b)=> (b.data.publishDate as any) - (a.data.publishDate as any));
---
<BaseLayout title="Ebooks | MindVerse">
  <h1 style="margin-top:0;font-size:clamp(1.8rem,5vw,2.6rem);background:var(--grad);-webkit-background-clip:text;color:transparent;">Ebooks</h1>
  <p style="max-width:720px;font-size:.95rem;opacity:.85;">Rebuild in progress. Below are our current titles with short previews. Full versions are available on Kindle (direct author links, no affiliates).</p>
  <div class="grid" style="margin-top:2rem;">
    {ebooks.map(e => <EbookCard ebook={e} />)}
  </div>
</BaseLayout>
