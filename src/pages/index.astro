---
import { getCollection } from 'astro:content';
const ebooks = (await getCollection('ebooks')).sort((a,b)=> (b.data.publishDate as any) - (a.data.publishDate as any)).slice(0,3);
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>MindVerse • Rebuild</title>
    <meta name="robots" content="noindex,nofollow" />
    <link rel="icon" href="/favicon.svg" />
    <style>
      body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,sans-serif;background:#0f172a;color:#f1f5f9;line-height:1.55;}
      header{display:flex;align-items:center;justify-content:space-between;padding:1rem 1.25rem;border-bottom:1px solid rgba(255,255,255,.08);}
      .logo{font-weight:700;background:linear-gradient(135deg,#3b82f6,#8b5cf6,#ec4899);-webkit-background-clip:text;color:transparent;font-size:1rem;letter-spacing:.5px;}
      a{text-decoration:none;color:#60a5fa;} a:hover{text-decoration:underline;}
      main{max-width:1100px;margin:0 auto;padding:2.5rem 1.25rem 4rem;}
      h1{margin:0 0 1rem;font-size:clamp(2.2rem,5vw,3.2rem);background:linear-gradient(135deg,#3b82f6,#8b5cf6,#ec4899);-webkit-background-clip:text;color:transparent;}
      .intro{max-width:760px;font-size:1.02rem;opacity:.9;}
      .ebooks-grid{display:grid;gap:1.25rem;margin-top:2rem;grid-template-columns:repeat(auto-fill,minmax(200px,1fr));}
      .card{display:flex;flex-direction:column;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.08);border-radius:1rem;overflow:hidden;min-height:240px;}
      .card img{width:100%;aspect-ratio:3/4;object-fit:cover;}
      .card .body{padding:.85rem .9rem 1.1rem;display:flex;flex-direction:column;gap:.5rem;}
      .card h3{margin:0;font-size:1rem;line-height:1.25;font-weight:600;}
      .card p{margin:0;font-size:.75rem;opacity:.75;line-height:1.35;}
      footer{padding:2rem 1.25rem;font-size:.7rem;opacity:.55;text-align:center;}
      .cta-btn{display:inline-block;background:linear-gradient(135deg,#6366f1,#8b5cf6,#ec4899);padding:.75rem 1.15rem;border-radius:999px;font-weight:600;color:#fff;text-decoration:none;font-size:.8rem;box-shadow:0 4px 18px -4px rgba(99,102,241,.5);transition:.25s;}
      .cta-btn:hover{transform:translateY(-2px);box-shadow:0 6px 22px -6px rgba(99,102,241,.6);}
      nav a{margin-right:1rem;font-size:.8rem;letter-spacing:.5px;color:#cbd5e1;} nav a:last-child{margin-right:0;} nav a:hover{color:#fff;}
      .note{margin-top:2rem;font-size:.7rem;opacity:.5;max-width:640px;}
    </style>
  </head>
  <body>
    <header>
      <div class="logo">MindVerse</div>
      <nav>
        <a href="/ebooks">Ebooks</a>
        <a href="/amazon">Amazon</a>
      </nav>
    </header>
    <main>
      <h1>Rebuilding MindVerse</h1>
      <p class="intro">Transitioning from a broad blog to a focused hub for our own Kindle e‑books. Below are the first titles. Detailed pages include an on‑site preview. Indexing & SEO are temporarily disabled while structure stabilizes.</p>
      <div class="ebooks-grid">
        {ebooks.map(e => (
          <a href={`/ebooks/${e.slug ?? e.id.replace(/\\.md$/, '')}`} class="card">
            {e.data.cover && <img src={e.data.cover} alt={e.data.title} loading="lazy" />}
            <div class="body">
              <h3>{e.data.title}</h3>
              <p>{e.data.description}</p>
            </div>
          </a>
        ))}
      </div>
      <div style="margin-top:2.5rem;">
        <a href="/ebooks" class="cta-btn">View All Ebooks</a>
      </div>
      <p class="note">No affiliates. Canonical + sitemap will be reinstated after content baseline & design pass.</p>
    </main>
    <footer>© {new Date().getFullYear()} MindVerse • Rebuild phase (noindex)</footer>
  </body>
</html>

