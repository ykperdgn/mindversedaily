---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const ebooks = (await getCollection('ebooks')).sort((a,b)=> (b.data.publishDate as any) - (a.data.publishDate as any)).slice(0,3);
---
<BaseLayout title="MindVerse • Kindle E‑Books" description="MindVerse authored Kindle e‑books: conscious productivity, motivation architecture, speculative fiction previews.">
  <h1 style="margin:0 0 1rem;font-size:clamp(2.2rem,5vw,3.2rem);background:var(--grad);-webkit-background-clip:text;color:transparent;">MindVerse E‑Books</h1>
  <p class="intro" style="max-width:760px;font-size:1.02rem;opacity:.9;">Curated Kindle titles by MindVerse—engineering inner architecture, sustainable drive, and imaginative speculative worlds. Select a book to read an on‑site preview then continue on Kindle.</p>
  <div class="ebooks-grid" style="display:grid;gap:1.25rem;margin-top:2rem;grid-template-columns:repeat(auto-fill,minmax(200px,1fr));">
    {ebooks.map(e => (
      <a href={`/ebooks/${e.slug ?? e.id.replace(/\.md$/, '')}`} class="card" style="display:flex;flex-direction:column;background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.08);border-radius:1rem;overflow:hidden;min-height:240px;text-decoration:none;">
        {e.data.cover && <img src={e.data.cover} alt={e.data.title} loading="lazy" style="width:100%;aspect-ratio:3/4;object-fit:cover;display:block;" />}
        <div class="body" style="padding:.85rem .9rem 1.1rem;display:flex;flex-direction:column;gap:.5rem;">
          <h3 style="margin:0;font-size:1rem;line-height:1.25;font-weight:600;color:#f1f5f9;">{e.data.title}</h3>
          <p style="margin:0;font-size:.75rem;opacity:.75;line-height:1.35;color:#f1f5f9;">{e.data.description}</p>
        </div>
      </a>
    ))}
  </div>
  <div style="margin-top:2.5rem;">
    <a href="/ebooks" class="cta-btn" style="display:inline-block;background:linear-gradient(135deg,#6366f1,#8b5cf6,#ec4899);padding:.75rem 1.15rem;border-radius:999px;font-weight:600;color:#fff;text-decoration:none;font-size:.8rem;box-shadow:0 4px 18px -4px rgba(99,102,241,.5);transition:.25s;">View All Ebooks</a>
  </div>
  <style>
    .cta-btn:hover{transform:translateY(-2px);box-shadow:0 6px 22px -6px rgba(99,102,241,.6);} .card:hover h3{text-decoration:underline;}
  </style>
</BaseLayout>

