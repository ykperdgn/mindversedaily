---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { render } from 'astro:content';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	// SADECE TÜRKÇE POSTLARİ handle et - İngilizce postlar /en/blog/[...slug].astro tarafından handle edilecek
	const turkishPosts = posts.filter(post => {
		if (!post.id) return false;
		// Sadece Türkçe postlar: .tr ile bitenler veya İngilizce olmayan (.en ile bitmeyen) postlar
		return post.id.endsWith('tr') || (!post.id.endsWith('en') && !post.id.endsWith('tr'));
	});
	return turkishPosts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>
