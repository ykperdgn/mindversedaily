    }

    .hero-title {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 1rem;
      text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
      font-size: 1.2rem;
      opacity: 0.9;
      margin-bottom: 2rem;
    }

    .zodiac-overview {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 3rem;
    }

    .zodiac-card {
      background: white;
      border-radius: 1rem;
      padding: 1.5rem;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      text-align: center;
      transition: all 0.3s ease;
      border: 2px solid transparent;
    }

    .zodiac-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
      border-color: #8e44ad;
    }

    .zodiac-emoji {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .zodiac-name {
      font-size: 1.3rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: #2d1b69;
    }

    .zodiac-element {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .zodiac-link {
      display: inline-block;
      background: linear-gradient(45deg, #8e44ad, #3498db);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .zodiac-link:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .recent-horoscopes {
      margin-top: 3rem;
    }

    .section-title {
      font-size: 2.5rem;
      font-weight: 800;
      text-align: center;
      margin-bottom: 2rem;
      color: #2d1b69;
      position: relative;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 4px;
      background: linear-gradient(45deg, #8e44ad, #3498db);
      border-radius: 2px;
    }

    .horoscope-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }

    .horoscope-card {
      background: white;
      border-radius: 1.5rem;
      overflow: hidden;
      box-shadow: 0 6px 25px rgba(0,0,0,0.1);
      transition: all 0.3s ease;
      border: 1px solid rgba(0,0,0,0.05);
    }

    .horoscope-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.15);
    }

    .card-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .card-content {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.3rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: #2d1b69;
      line-height: 1.3;
    }

    .card-description {
      color: #666;
      margin-bottom: 1rem;
      line-height: 1.5;
    }

    .card-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.9rem;
      color: #888;
    }

    .card-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .card-tag {
      background: #f1f5f9;
      padding: 0.25rem 0.5rem;
      border-radius: 0.5rem;
      font-size: 0.8rem;
      color: #64748b;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    @media (max-width: 768px) {
      .horoscope-main {
        padding: 1rem;
      }

      .hero-title {
        font-size: 2rem;
      }

      .zodiac-overview {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
      }

      .horoscope-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="content-wrapper">
    <Header />

    <main class="horoscope-main">
      <!-- Hero Section -->
      <section class="horoscope-hero">
        <div class="hero-content">
          <div class="hero-icon">üîÆ‚ú®</div>
