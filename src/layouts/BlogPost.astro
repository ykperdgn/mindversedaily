---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_AUTHOR, SITE_LANG } from '../consts';

// Enhanced props for SEO
const { title, description, pubDate, updatedDate, image, category, tags = [] } = Astro.props;

// Enhanced keywords for blog posts
const categoryKeywords = {
  health: 'sağlık, tıp, wellness, mental sağlık, beslenme, egzersiz',
  psychology: 'psikoloji, davranış, zihin, kişilik, terapi, bilişsel',
  history: 'tarih, geçmiş, medeniyet, kültür, arkeoloji, antik',
  space: 'uzay, astronomi, gezegen, galaksi, keşif, NASA',
  quotes: 'alıntılar, söz, hikmet, felsefe, motivasyon, ilham',
  love: 'aşk, ilişki, duygular, romantizm, sevgi, bağ'
};

const enhancedKeywords = [
  categoryKeywords[category] || '',
  ...tags,
  title.toLowerCase().split(' ').filter(word => word.length > 3).slice(0, 5)
].filter(Boolean).join(', ');

---

<!DOCTYPE html>
<html lang={SITE_LANG}>
<head>
	<BaseHead
		title={title}
		description={description}
		image={image}
		keywords={enhancedKeywords}
		author={SITE_AUTHOR}
		publishedTime={pubDate?.toISOString()}
		modifiedTime={updatedDate?.toISOString()}
		articleType="article"
	/>
	<style>
		body {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			min-height: 100vh;
			margin: 0;
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		}

		.content-wrapper {
			background: rgba(255, 255, 255, 0.95);
			min-height: 100vh;
			backdrop-filter: blur(10px);
		}
		.blog-container {
			max-width: 4xl;
			margin: 0 auto;
			padding: 8rem 1rem 2rem 1rem; /* Header için üstten boşluk */
		}

		.blog-article {
			background: rgba(255, 255, 255, 0.95);
			border-radius: 2rem;
			box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
			overflow: hidden;
			backdrop-filter: blur(10px);
			border: 1px solid rgba(226, 232, 240, 0.5);
		}

		.blog-content {
			padding: 3rem 4rem; /* Daha geniş padding */
		}

		.blog-meta {
			display: flex;
			align-items: center;
			gap: 1rem;
			margin-bottom: 2rem;
			font-size: 0.95rem;
			color: #64748b;
		}

		.blog-title {
			font-size: 2.5rem;
			font-weight: 900;
			color: #1e293b;
			margin-bottom: 2rem;
			line-height: 1.2;
			background: linear-gradient(135deg, #1e293b 0%, #475569 100%);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
		}
		.prose {
			color: #374151;
			line-height: 1.8;
			font-size: 1.2rem; /* Daha büyük font */
			max-width: none; /* Full width kullan */
		}

		.prose p {
			margin-bottom: 1.8rem; /* Daha fazla margin */
			font-size: 1.2rem; /* Paragraph'lar için büyük font */
			line-height: 1.8; /* İyi line height */
		}

		.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
			color: #1e293b;
			font-weight: 700;
			margin-top: 2rem;
			margin-bottom: 1rem;
		}

		.prose h2 {
			font-size: 1.75rem;
			border-bottom: 2px solid #e2e8f0;
			padding-bottom: 0.5rem;
		}

		.prose h3 {
			font-size: 1.5rem;
		}

		.prose p {
			margin-bottom: 1.5rem;
		}

		.prose a {
			color: #2563eb;
			text-decoration: none;
			border-bottom: 1px solid transparent;
			transition: all 0.3s ease;
		}

		.prose a:hover {
			border-bottom-color: #2563eb;
		}

		.prose blockquote {
			border-left: 4px solid #2563eb;
			padding-left: 1.5rem;
			margin: 2rem 0;
			font-style: italic;
			color: #64748b;
			background: #f8fafc;
			padding: 1.5rem;
			border-radius: 0.5rem;
		}

		.prose ul, .prose ol {
			margin: 1.5rem 0;
			padding-left: 2rem;
		}

		.prose li {
			margin-bottom: 0.5rem;
		}

		.prose code {
			background: #f1f5f9;
			padding: 0.25rem 0.5rem;
			border-radius: 0.25rem;
			font-size: 0.9em;
			color: #e11d48;
		}

		.prose pre {
			background: #1e293b;
			color: #e2e8f0;
			padding: 1.5rem;
			border-radius: 0.75rem;
			overflow-x: auto;
			margin: 2rem 0;
		}

		.back-link {
			display: inline-flex;
			align-items: center;
			gap: 0.5rem;
			color: #2563eb;
			text-decoration: none;
			font-weight: 600;
			margin-bottom: 2rem;
			padding: 0.75rem 1.25rem;
			background: rgba(37, 99, 235, 0.1);
			border-radius: 2rem;
			transition: all 0.3s ease;
		}

		.back-link:hover {
			background: #2563eb;
			color: white;
			transform: translateY(-2px);
		}

		@media (max-width: 768px) {
			.blog-container {
				padding: 1rem;
			}

			.blog-content {
				padding: 2rem 1.5rem;
			}

			.blog-title {
				font-size: 2rem;
			}

			.prose {
				font-size: 1rem;
			}
		}
	</style>
</head>
<body>
	<div class="content-wrapper">
		<Header />
		<main class="blog-container">
			<a href="/blog" class="back-link">
				← Blog'a Dön
			</a>
			<article class="blog-article">
				<div class="blog-content">
					<div class="blog-meta">
						<FormattedDate date={pubDate} />
						{updatedDate && <span> • Güncellendi: <FormattedDate date={updatedDate} /></span>}
					</div>
					<h1 class="blog-title">{title}</h1>
					<div class="prose">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</div>
</body>
</html>
