---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import { SITE_TITLE, SITE_DESCRIPTION, SITE_URL, SITE_AUTHOR, SITE_KEYWORDS, SITE_LANG, SITE_LOCALE } from '../consts';
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata | string;
	keywords?: string;
	author?: string;
	publishedTime?: string;
	modifiedTime?: string;
	articleType?: 'article' | 'website';
	category?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Detect language and alternate URLs
const pathname = Astro.url.pathname;
const isEnglish = pathname.startsWith('/en');

// Compute alternate URLs
let trUrl, enUrl, xDefaultUrl;
if (isEnglish) {
  enUrl = canonicalURL.toString();
  trUrl = new URL(pathname.replace(/^\/en/, ''), Astro.site).toString();
  xDefaultUrl = enUrl;
} else {
  trUrl = canonicalURL.toString();
  enUrl = new URL('/en' + (pathname === '/' ? '' : pathname), Astro.site).toString();
  xDefaultUrl = trUrl;
}

const {
	title,
	description,
	image: imageProp = '/assets/blog-placeholder-1.svg',
	keywords: customKeywords,
	author = SITE_AUTHOR,
	publishedTime,
	modifiedTime,
	articleType = 'website',
	category
} = Astro.props;

// Determine full image URL
let ogImageUrl;
if (typeof imageProp === 'string') {
  ogImageUrl = new URL(imageProp, Astro.site).toString();
} else {
  // ImageMetadata case
  ogImageUrl = new URL(imageProp.src, Astro.site).toString();
}

// --- KATEGORİLERİ VE ANAHTARLARI TAMAMEN AYIR ---
// İngilizce kategori anahtarları ve isimleri
const EN_CATEGORIES = [
  'health', 'psychology', 'history', 'space', 'quotes', 'love', 'horoscope', 'science', 'business', 'world'
];
const EN_CATEGORY_NAMES = {
  health: 'Health',
  psychology: 'Psychology',
  history: 'History',
  space: 'Space',
  quotes: 'Quotes',
  love: 'Love',
  horoscope: 'Horoscope',
  science: 'Science',
  business: 'Business',
  world: 'World'
};
const categoryKeywordsEN = {
  health: 'health, medicine, wellness, mental health, nutrition, exercise, doctor advice',
  psychology: 'psychology, behavioral science, mental health, personality, therapy, cognitive psychology',
  history: 'history news, past, civilization, culture, archaeology, ancient times, historical events',
  space: 'space news, astronomy, planet discovery, galaxy, NASA, astronaut, space technology',
  quotes: 'inspirational quotes, wisdom, philosophy, motivation, success quotes',
  love: 'love guide, relationship advice, emotions, romance, affection, couples therapy',
  business: 'business, economy, entrepreneurship, finance, management, career',
  science: 'science, research, technology, innovation, discovery',
  world: 'world, news, international, global, agenda'
};

// --- KATEGORİ İSİMLERİ VE KEYWORDS DİL BAZLI OLARAK KULLANILACAK ---

// ENGLISH PAGE LOGIC: Only use English categories, names, and keywords
const allKeywords = isEnglish
  ? [SITE_KEYWORDS, customKeywords, category ? categoryKeywordsEN[category] : '', 'MindVerse blog', ...EN_CATEGORIES.map(cat => EN_CATEGORY_NAMES[cat])].filter(Boolean).join(', ')
  : [SITE_KEYWORDS, customKeywords].filter(Boolean).join(', ');

// Enhanced Structured Data
const structuredData = {
  '@context': 'https://schema.org',
  '@type': articleType === 'article' ? 'Article' : 'WebSite',
  'name': title,
  'headline': title,
  'description': description,
  'url': canonicalURL.toString(),
  'image': {
    '@type': 'ImageObject',
    'url': ogImageUrl,
    'width': 1200,
    'height': 630
  },
  'author': {
    '@type': 'Organization',
    'name': author,
    'url': SITE_URL
  },
  'publisher': {
    '@type': 'Organization',
    'name': SITE_TITLE.split(' - ')[0],
    'logo': {
      '@type': 'ImageObject',
      'url': new URL('/favicon.svg', Astro.site).toString()
    },
    'url': SITE_URL
  },
  'mainEntityOfPage': {
    '@type': 'WebPage',
    '@id': canonicalURL.toString()
  },
  'datePublished': publishedTime || new Date().toISOString(),
  'dateModified': modifiedTime || publishedTime || new Date().toISOString(),
  'inLanguage': SITE_LANG
};

// Full page title for SEO
const fullTitle = title.includes('MindVerse') ? title : `${title} | ${SITE_TITLE}`;

---

<!-- Essential Meta Tags -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=5,user-scalable=yes" />
<meta name="generator" content={Astro.generator} />

<!-- Enhanced Mobile Optimization -->
<meta name="mobile-web-capable" content="yes">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<meta name="apple-mobile-web-app-title" content={SITE_TITLE}>
<meta name="theme-color" content="#667eea">
<meta name="msapplication-TileColor" content="#667eea">
<meta name="format-detection" content="telephone=no">

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<meta name="keywords" content={allKeywords} />
<meta name="author" content={author} />
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
<meta name="language" content={isEnglish ? 'en' : 'tr'} />
<meta name="revisit-after" content="7 days" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Language alternates -->
<link rel="alternate" hreflang="tr" href={trUrl} />
<link rel="alternate" hreflang="en" href={enUrl} />
<link rel="alternate" hreflang="x-default" href={xDefaultUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={articleType === 'article' ? 'article' : 'website'} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:site_name" content={isEnglish ? 'MindVerse Daily' : SITE_TITLE} />
<meta property="og:locale" content={isEnglish ? 'en_US' : 'tr_TR'} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImageUrl} />
<meta property="twitter:image:alt" content={title} />

<!-- Article specific meta tags -->
{articleType === 'article' && publishedTime && (
  <>
    <meta property="article:published_time" content={publishedTime} />
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    <meta property="article:author" content={author} />
    {category && <meta property="article:section" content={category} />}
  </>
)}

<!-- Favicon and Icons -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon.svg" />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href="/rss.xml" />

<!-- Preconnect to external domains for performance -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://images.pexels.com" />
<link rel="preconnect" href="https://pixabay.com" />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- AdSense and Turkish-only scripts -->
{!isEnglish && (
  <>
    <meta name="google-adsense-account" content="ca-pub-3096725438789562" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3096725438789562" crossorigin="anonymous"></script>
  </>
)}

<!-- Google Analytics: Geliştirici trafiğini hariç tut -->
<script>
  if (location.hostname === 'localhost') {
    window['ga-disable-G-B91B93QXHJ'] = true;
  }
</script>
<script async src="https://www.googletagmanager.com/gtag/js?id=G-B91B93QXHJ"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-B91B93QXHJ', {
    page_title: document.title,
    page_location: window.location.href
  });
  // Manuel event örneği: buton tıklama
  // gtag('event', 'click', { event_category: 'button', event_label: 'MyButton' });
</script>

<!-- Google Search Console verification -->
<meta name="google-site-verification" content="MindVerse-Daily-Blog-Verification-2025" />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<!-- Performance and Security -->
<meta http-equiv="X-Content-Type-Options" content="nosniff" />
<meta http-equiv="X-Frame-Options" content="DENY" />
<meta http-equiv="X-XSS-Protection" content="1; mode=block" />
<meta name="referrer" content="strict-origin-when-cross-origin" />

<!-- Additional SEO Meta Tags -->
<meta name="distribution" content="global" />
<meta name="rating" content="general" />
<meta name="classification" content="Education, News, Science, Health, Technology" />
<meta name="coverage" content="Worldwide" />
<meta name="target" content="all" />
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />
