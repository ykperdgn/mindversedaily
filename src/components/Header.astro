---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-40 bg-white/95 backdrop-blur shadow-sm border-b border-blue-100">
  <div class="max-w-4xl mx-auto flex flex-col sm:flex-row items-center justify-between py-4 px-4 gap-4">
    <a href="/" class="flex items-center gap-2 font-extrabold text-2xl tracking-tight text-blue-700">
      <img src="/favicon.svg" alt="MindVerse" class="h-10 w-10 rounded-full border-2 border-blue-200 shadow bg-white" />
      <span class="hidden sm:inline font-serif italic text-lg text-blue-800">MindVerse Blog</span>
    </a>
    <nav class="w-full flex flex-wrap justify-center gap-1 mt-3 sm:mt-0">
      <a href="/" class="category-tab active"><span class="category-icon">🏠</span>Home</a>
      <a href="/blog?category=science" class="category-tab"><span class="category-icon">🔬</span>Science</a>
      <a href="/blog?category=health" class="category-tab"><span class="category-icon">🧬</span>Health</a>
      <a href="/blog?category=business" class="category-tab"><span class="category-icon">💼</span>Business</a>
      <a href="/blog?category=world" class="category-tab"><span class="category-icon">🌍</span>World</a>
      <a href="/about" class="category-tab"><span class="category-icon">ℹ️</span>About</a>
    </nav>
    <form action="/blog" method="get" class="mv-search-form" style="margin-left:auto;">
      <input type="text" name="q" placeholder="Ara..." class="mv-search-input" style="padding:0.4em 1em;border-radius:1em;border:1px solid #e0e7ef;outline:none;" />
    </form>
  </div>
</header>

<style>
  .category-tab {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    border-radius: 1.5rem;
    background: #f8fafc;
    color: #2563eb;
    font-weight: 600;
    font-size: 1rem;
    transition: background 0.2s, color 0.2s, box-shadow 0.2s;
    min-width: 80px;
    border: 1.5px solid transparent;
    margin: 0 0.15rem;
    box-shadow: 0 1px 4px 0 rgba(0,0,0,0.03);
  }
  .category-tab:hover, .category-tab.active {
    background: #2563eb;
    color: #fff;
    border-color: #2563eb;
    box-shadow: 0 2px 8px 0 rgba(37,99,235,0.10);
  }
  .category-icon {
    font-size: 1.2rem;
  }
</style>

<footer class="text-center text-xs text-gray-500 py-6 mt-10 border-t border-blue-100 bg-white">
  <img src="/favicon.svg" alt="MindVerse" class="h-7 w-7 mx-auto mb-2 opacity-80" />
  <div class="mb-1 font-semibold text-blue-700">MindVerse Blog</div>
  <div>© {new Date().getFullYear()} MindVerse. All rights reserved.</div>
</footer>
