    <nav class="mv-categories">
      <a href="/blog" class="mv-category-tab">
        <span class="category-icon">üìö</span>
        T√ºm√º
      </a>
      {categories.map(cat => (
        <a href={`/blog/${cat}`} class="mv-category-tab">
