---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-40 bg-white/95 backdrop-blur shadow-sm border-b border-blue-100">
  <div class="max-w-4xl mx-auto flex flex-col sm:flex-row items-center justify-between py-4 px-4 gap-4">
    <a href="/" class="flex items-center gap-2 font-extrabold text-2xl tracking-tight text-blue-700">
      <img src="/favicon.svg" alt="MindVerse" class="h-10 w-10 rounded-full border-2 border-blue-200 shadow bg-white" />
      <span class="hidden sm:inline font-serif italic text-lg text-blue-800">MindVerse Blog</span>
    </a>
    <nav class="w-full flex flex-wrap justify-center gap-1 mt-3 sm:mt-0">
      <a href="/" class="category-tab active"><span class="category-icon">üè†</span>Home</a>
      {/* Kategoriler otomatik olarak eklenir */}
    </nav>
  </div>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>

<footer class="text-center text-xs text-gray-500 py-6 mt-10 border-t border-blue-100 bg-white">
  <img src="/favicon.svg" alt="MindVerse" class="h-7 w-7 mx-auto mb-2 opacity-80" />
  <div class="mb-1 font-semibold text-blue-700">MindVerse Blog</div>
  <div>¬© {new Date().getFullYear()} MindVerse. All rights reserved.</div>
</footer>
