import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

const categories = [
  "health",
  "psychology",
  "history",
  "space",
  "quotes",
  "love"
];

const categoryIcons = {
  health: "üß¨",
  psychology: "üß†",
  history: "üìú",
  space: "üöÄ",
  quotes: "üí¨",
  love: "‚ù§Ô∏è",
  horoscope: "üîÆ"
};

// T√ºrk√ße kategori isimleri
const categoryNamesTR = {
  health: "Saƒülƒ±k",
  psychology: "Psikoloji",
  history: "Tarih",
  space: "Uzay",
  quotes: "S√∂zler",
  love: "A≈ük",
  horoscope: "Horoskop"
};
---

<header class="header-fixed">
  <div class="max-w-6xl mx-auto">
    <!-- Logo Section -->
    <div class="logo-section">
      <a href="/" class="logo-link">
        <div class="logo-container">
          <span class="galaxy-emoji">üåå</span>
        </div>
        <div class="brand-text">
          <span class="mind-text">Mind</span><span class="verse-text">Verse</span>
        </div>
      </a>
    </div>

    <!-- Categories Navigation -->
    <nav class="mv-categories-wrapper">
      <div class="mv-categories">
        <a href="/horoscope" class="mv-category-tab">
          <span class="category-icon">üîÆ</span>
          Horoskop
        </a>
        {categories.map(cat => (
          <a href={`/${cat}`} class="mv-category-tab">
            <span class="category-icon">{categoryIcons[cat]}</span>{categoryNamesTR[cat]}
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  /* Header Fixed */
  .header-fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(226, 232, 240, 0.8);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  /* Logo Section */
  .logo-section {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1rem;
    width: 100%;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 900;
    font-size: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .logo-link:hover {
    transform: scale(1.02);
  }

  /* Logo ve Brand Styling */
  .logo-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: linear-gradient(135deg, #1e1b4b 0%, #312e81 25%, #1e40af 50%, #7c3aed 75%, #ec4899 100%);
    border: 2px solid rgba(255, 255, 255, 0.3);
    box-shadow:
      0 0 20px rgba(124, 58, 237, 0.4),
      0 0 40px rgba(124, 58, 237, 0.2),
      inset 0 0 15px rgba(255, 255, 255, 0.1);
    transition: all 0.4s ease;
  }

  .galaxy-emoji {
    font-size: 1.5rem;
    animation: spin 8s linear infinite;
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.8));
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .logo-link:hover .logo-container {
    transform: scale(1.1);
    box-shadow:
      0 0 40px rgba(124, 58, 237, 0.6),
      0 0 80px rgba(124, 58, 237, 0.3),
      inset 0 0 25px rgba(255, 255, 255, 0.2);
  }

  .logo-link:hover .galaxy-emoji {
    animation-duration: 2s;
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    line-height: 0.9;
  }

  .mind-text {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 900;
    font-size: 1.4rem;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px rgba(59, 130, 246, 0.3);
  }

  .verse-text {
    background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 50%, #f59e0b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 900;
    font-size: 1.4rem;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px rgba(139, 92, 246, 0.3);
  }

  .logo-link:hover .mind-text,
  .logo-link:hover .verse-text {
    animation: glow 2s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from {
      filter: brightness(1) saturate(1);
    }
    to {
      filter: brightness(1.2) saturate(1.3);
    }
  }

  /* Kategori Tabs - B√ºy√ºk ve Belirgin */
  .mv-categories-wrapper {
    background: rgba(248, 250, 252, 0.95);
    border-top: 1px solid rgba(226, 232, 240, 0.8);
    padding: 0.5rem 0;
  }

  .mv-categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    max-width: 6xl;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .mv-category-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 1.5rem;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    color: #2563eb;
    font-weight: 700;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    min-width: 100px;
    border: 2px solid rgba(37, 99, 235, 0.15);
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    text-decoration: none;
    position: relative;
    overflow: hidden;
    text-align: center;
    justify-content: center;
  }

  .mv-category-tab::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
    transition: left 0.3s;
    z-index: -1;
  }

  .mv-category-tab:hover::before {
    left: 0;
  }

  .mv-category-tab:hover {
    color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.3);
    border-color: transparent;
  }

  .category-icon {
    font-size: 1.1rem;
  }  @media (max-width: 768px) {
    .logo-section {
      padding: 0.5rem 0.75rem;
    }

    .logo-link {
      gap: 0.5rem;
      font-size: 1.25rem;
    }

    .mv-categories-wrapper {
      padding: 0.4rem 0;
    }

    .mv-categories {
      overflow-x: auto;
      padding: 0 0.75rem;
      justify-content: flex-start;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
      gap: 0.4rem;
    }

    .mv-categories::-webkit-scrollbar {
      display: none;
    }

    .mv-category-tab {
      font-size: 0.85rem;
      padding: 0.6rem 1rem;
      white-space: nowrap;
      flex-shrink: 0;
      min-width: 85px;
    }

    .category-icon {
      font-size: 1rem;
    }
  }
</style>

